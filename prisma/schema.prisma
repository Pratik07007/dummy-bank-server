generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id  Int @id  @default(autoincrement())
  fName String
  lName  String
  email String @unique
  phone String @unique
  balance Balance?
  citizenship CitizenShip?
  address Address[]
}

model Balance{
  id Int @id @default(autoincrement())
  amount Int
  userId Int @unique
  user User @relation(fields: [userId],references: [id])
}

model CitizenShip{
  id Int @id @default(autoincrement())
  number String
  image String?
  userId Int @unique
  user User @relation(fields: [userId],references: [id])
}

model Address{
  id Int @id  @default(autoincrement())
  country String
  city  String
  address String
  sketchImg String
  userId Int
  user User @relation(fields: [userId],references: [id])
}